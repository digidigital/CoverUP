<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>de.digidigital.coverup</id>

  <name>CoverUP PDF</name>
  <summary>Redact sensitive information in PDFs and images</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-only</project_license>

  <developer id="de.digidigital">
    <name>Bj√∂rn Seipel</name>
  </developer>

  <description>
    <p>
      CoverUP is a privacy-focused tool for redacting sensitive information in PDF
      documents and images. Draw black or white bars over text, images, or any content
      you want to hide before sharing documents.
    </p>
    <p>Features:</p>
    <ul>
      <li>Import PDF, PNG, and JPG files</li>
      <li>Draw black or white redaction bars</li>
      <li>PDF pages are converted to images, preventing text copying and hidden layer leaks</li>
      <li>High-quality and compressed export modes</li>
      <li>Session persistence - continue where you left off</li>
      <li>Support for password-protected PDFs</li>
      <li>Undo functionality for corrections</li>
      <li>Zoom in/out for precise redaction</li>
    </ul>
  </description>

  <launchable type="desktop-id">de.digidigital.coverup.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <caption>Main application window with PDF loaded</caption>
      <image>https://raw.githubusercontent.com/digidigital/CoverUP/refs/heads/main/Screenshots/CoverUP_screenshot.png</image>
    </screenshot>
  </screenshots>

  <url type="homepage">https://coverup.digidigital.de</url>
  <url type="bugtracker">https://github.com/digidigital/CoverUP/issues</url>
  <url type="vcs-browser">https://github.com/digidigital/CoverUP</url>

  <content_rating type="oars-1.1" />

  <releases>
    <release version="0.4.0" date="2026-01-15">
      <description>
        <p>New features and improvements:</p>
        <ul>
          <li>Command-line file argument support</li>
          <li>Password-protected PDF support</li>
          <li>Window title shows current filename</li>
          <li>Pre-filled save dialog with suggested filename</li>
          <li>Improved file type validation</li>
          <li>Reorganized as proper Python package</li>
          <li>Added PyInstaller hooks for easier distribution</li>
        </ul>
      </description>
    </release>
    <release version="0.3.0" date="2024-12-01">
